<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  package="com.cansiny.eform"
	  android:versionCode="10001"
	  android:versionName="ver1.1-build0001" android:installLocation="auto">

  <uses-feature android:name="android.hardware.usb.host" android:required="true"/>

  <uses-sdk
      android:minSdkVersion="13"
      android:targetSdkVersion="17" />

  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

  <application
      android:name="EFormApplication"
      android:logo="@drawable/launcher"
      android:icon="@drawable/launcher"
      android:label="@string/app_name"
      android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
      android:allowBackup="true"
      android:allowClearUserData="false"
      android:largeHeap="true"
      android:hardwareAccelerated="true"
      android:restoreAnyVersion="true"
      android:testOnly="false"
      android:allowTaskReparenting="false" >

    <activity
        android:name="com.cansiny.eform.HomeActivity"
        android:label="@string/app_name"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:launchMode="singleTask"
	android:hardwareAccelerated="true"
        android:showOnLockScreen="true" >

      <intent-filter>
        <category android:name="android.intent.category.LAUNCHER" />
        <action android:name="android.intent.action.MAIN" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>	
      </intent-filter>
      <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                 android:resource="@xml/device_filter" />
    </activity>

    <activity android:name="com.cansiny.eform.LogActivity"
        android:hardwareAccelerated="true">
    </activity>

    <activity android:name="com.cansiny.eform.FormActivity"
        android:hardwareAccelerated="true">
    </activity>

  </application>

</manifest>
